---
// SEO Component for consistent meta tags across all pages
import PerformanceOptimization from './PerformanceOptimization.astro';
import AccessibilityOptimization from './AccessibilityOptimization.astro';
import SEOAudit from './SEOAudit.astro';
import { generateStructuredData, seoKeywords } from '../lib/structured-data';

export interface SEOProps {
  title: string;
  description: string;
  keywords?: string;
  author?: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  twitterCard?: string;
  noindex?: boolean;
  structuredData?: any;
  lang?: string;
  pageType?: 'homepage' | 'about' | 'collection' | 'blog' | 'community';
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
}

const {
  title,
  description,
  keywords,
  author = 'Everdantia',
  canonical,
  ogImage = '/og-image.png',
  ogType = 'website',
  twitterCard = 'summary_large_image',
  noindex = false,
  structuredData,
  lang = 'en',
  pageType = 'homepage',
  article
} = Astro.props as SEOProps;

// Get current URL for canonical and OG tags
const currentUrl = new URL(Astro.url.pathname, Astro.site);
const canonicalUrl = canonical || currentUrl.href;

// Auto-generate keywords based on page type if not provided
const defaultKeywords = keywords || seoKeywords[pageType] || seoKeywords.homepage;

// Ensure title is properly formatted and SEO optimized
const pageTitle = title && title.includes('Everdantia') ? title : `${title || 'Everdantia'} | Everdantia`;

// Clean description (max 160 characters for optimal SEO)
const cleanDescription = description && description.length > 160 ? description.substring(0, 157) + '...' : (description || 'Digital forest NFTs supporting real-world conservation. 100 unique trees in our genesis collection.');

// Build full image URL for OG tags
const fullOgImage = ogImage && ogImage.startsWith('http') 
  ? ogImage 
  : `${Astro.site?.origin || 'https://everdantia.art'}${ogImage}`;

// Generate appropriate structured data
let schemaData = structuredData;
if (!schemaData) {
  switch (pageType) {
    case 'homepage':
      schemaData = [
        generateStructuredData('organization'),
        generateStructuredData('website'),
        generateStructuredData('faq')
      ];
      break;
    case 'collection':
      schemaData = generateStructuredData('nftCollection');
      break;
    case 'blog':
      schemaData = generateStructuredData('blogPost', {
        title: pageTitle,
        description: cleanDescription,
        url: canonicalUrl,
        datePublished: article?.publishedTime,
        dateModified: article?.modifiedTime,
        keywords: defaultKeywords
      });
      break;
    default:
      schemaData = generateStructuredData('organization');
  }
}
---

<!-- Primary Meta Tags -->
<title>{pageTitle}</title>
<meta name="title" content={pageTitle} />
<meta name="description" content={cleanDescription} />
<meta name="keywords" content={defaultKeywords} />
<meta name="author" content={author} />
<meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow, max-snippet:160, max-image-preview:large'} />
<link rel="canonical" href={canonicalUrl} />
<meta name="language" content={lang} />

<!-- Enhanced Meta Tags for NFT/Crypto -->
<meta name="category" content="Digital Art, Environmental Conservation, NFT" />
<meta name="coverage" content="Worldwide" />
<meta name="distribution" content="Global" />
<meta name="rating" content="General" />
<meta name="referrer" content="no-referrer-when-downgrade" />

<!-- Geographic Meta Tags -->
<meta name="geo.region" content="Global" />
<meta name="geo.placename" content="Digital Forest Conservation" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={cleanDescription} />
<meta property="og:image" content={fullOgImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content="Everdantia - Digital Forest NFTs Supporting Conservation" />
<meta property="og:site_name" content="Everdantia" />
<meta property="og:locale" content={lang === 'en' ? 'en_US' : lang} />

<!-- Article Meta Tags (for blog posts) -->
{article && (
  <>
    <meta property="article:published_time" content={article.publishedTime} />
    <meta property="article:modified_time" content={article.modifiedTime} />
    <meta property="article:author" content={article.author || 'JB'} />
    <meta property="article:section" content={article.section || 'Environmental Conservation'} />
    {article.tags && article.tags.map(tag => (
      <meta property="article:tag" content={tag} />
    ))}
  </>
)}

<!-- Twitter -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:url" content={canonicalUrl} />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={cleanDescription} />
<meta name="twitter:image" content={fullOgImage} />
<meta name="twitter:image:alt" content="Everdantia - Digital Forest Conservation NFTs" />
<meta name="twitter:creator" content="@Everdantia" />
<meta name="twitter:site" content="@Everdantia" />

<!-- Additional Meta Tags -->
<meta name="theme-color" content="#8bab5d" />
<meta name="msapplication-TileColor" content="#8bab5d" />
<meta name="application-name" content="Everdantia" />
<meta name="apple-mobile-web-app-title" content="Everdantia" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />

<!-- Structured Data -->
{schemaData && (
  <script type="application/ld+json" set:html={JSON.stringify(Array.isArray(schemaData) ? schemaData : [schemaData])} />
)}

<!-- Favicons (SEO-friendly) -->
<link rel="icon" type="image/x-icon" href="/favicon/favicon.ico" />
<link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
<link rel="icon" type="image/png" sizes="96x96" href="/favicon/favicon-96x96.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
<link rel="manifest" href="/favicon/site.webmanifest" />

<!-- PWA Icons -->
<link rel="icon" type="image/png" sizes="192x192" href="/favicon/web-app-manifest-192x192.png" />
<link rel="icon" type="image/png" sizes="512x512" href="/favicon/web-app-manifest-512x512.png" />

<!-- Performance & SEO -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="dns-prefetch" href="//fonts.googleapis.com" />

<!-- RSS Feed (great for SEO) -->
<link rel="alternate" type="application/rss+xml" title="Everdantia Blog RSS Feed" href="/rss.xml" />

<!-- Performance Optimization -->
<PerformanceOptimization 
  preloadImages={['/images/background/hilltop/hilltop0-medium.webp', '/images/background/hilltop/hilltop0-1920.webp']}
/>

<!-- Accessibility Optimization -->
<AccessibilityOptimization />

<!-- SEO Audit (Development only) -->
<SEOAudit />
