---
import Analytics from '../components/Analytics.astro';
import SEO from '../components/SEO.astro';

// Props:
const {
  title,
  description,
  keywords = 'sustainable living, environmental conservation, reforestation, green technology, eco-friendly',
  author = 'Everdantia',
  date,
  readTime = '3 min read',
  category = 'Blog',
  canonical,
  ogImage,
  children,
  featuredImage,
  featuredImageAlt = '',
} = Astro.props;

// Create structured data for blog posts
const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "author": {
    "@type": "Organization",
    "name": author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Everdantia",
    "logo": {
      "@type": "ImageObject",
      "url": "https://everdantia.art/favicon.svg"
    }
  },
  "datePublished": date,
  "dateModified": date,
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonical || Astro.url.href
  },
  "image": featuredImage ? `https://everdantia.art${featuredImage}` : "https://everdantia.art/images/og-default.jpg"
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- SEO Component -->
    <SEO 
      title={title}
      description={description}
      keywords={keywords}
      author={author}
      canonical={canonical}
      ogImage={featuredImage || ogImage}
      ogType="article"
      structuredData={structuredData}
    />
    {canonical && <link rel="canonical" href={canonical} />}
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage || featuredImage} />
    <meta property="og:site_name" content="Everdantia" />
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonical} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage || featuredImage} />
    <!-- Structured Data -->
    <script type="application/ld+json">
      {JSON.stringify({
        '@context': 'https://schema.org',
        '@type': 'BlogPosting',
        headline: title,
        description,
        image: ogImage || featuredImage,
        author: { '@type': 'Organization', name: author },
        publisher: {
          '@type': 'Organization',
          name: 'Everdantia',
          logo: { '@type': 'ImageObject', url: 'https://everdantia.art/favicon.svg' }
        },
        datePublished: date,
        mainEntityOfPage: canonical
      })}
    </script>
    
    <!-- Analytics and Performance Monitoring -->
    <Analytics enableAnalytics={true} enableErrorTracking={true} />
    
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Inter:wght@400;500&display=swap" rel="stylesheet" />
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font-family: 'Inter', sans-serif; background: #f8f6f2; color: #4d6b3c; line-height: 1.6; }
      .hero-section { position: relative; min-height: 500px; color: white; overflow: hidden; }
      .hero-image { position: absolute; inset: 0; z-index: -2; }
      .hero-image img { width: 100%; height: 100%; object-fit: cover; }
      .hero-overlay { position: absolute; inset: 0; background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.2), rgba(0,0,0,0.4)); z-index: -1; }
      .hero-content { position: relative; height: 100%; display: flex; flex-direction: column; justify-content: center; padding: 2rem; max-width: 800px; margin: 0 auto; text-align: center; }
      .nav-back { position: absolute; top: 2rem; left: 2rem; color: white; text-decoration: none; display: flex; align-items: center; gap: 0.5rem; font-weight: 500; background: rgba(255,255,255,0.1); padding: 0.75rem 1.5rem; border-radius: 2rem; backdrop-filter: blur(10px); transition: all 0.3s ease; }
      .nav-back:hover { background: rgba(255,255,255,0.2); transform: translateX(-5px); }
      .article-meta { display: flex; align-items: center; justify-content: center; gap: 1rem; margin-bottom: 2rem; font-size: 0.9rem; color: rgba(255,255,255,0.8); }
      .category-tag { background: rgba(139,171,93,0.9); color: white; padding: 0.5rem 1rem; border-radius: 1.5rem; font-size: 0.8rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; }
      .hero-section h1 { font-family: 'Cormorant Garamond', serif; font-size: clamp(2.5rem, 6vw, 4rem); font-weight: 700; margin-bottom: 2rem; text-shadow: 0 2px 20px rgba(0,0,0,0.3); line-height: 1.1; }
      .container { max-width: 900px; margin: 0 auto; padding: 0 2rem; position: relative; z-index: 1; }
      .article { background: rgba(255,255,255,0.95); border-radius: 2rem; margin: -4rem auto 4rem; position: relative; z-index: 1; box-shadow: 0 20px 60px rgba(0,0,0,0.4); overflow: hidden; backdrop-filter: blur(20px); border: 1px solid rgba(255,255,255,0.2); }
      .featured-image { width: 100%; height: 400px; object-fit: cover; }
      .chatgpt-image { object-fit: contain; background: #f8f6f2; height: 350px; display: block; margin: 0 auto; border-radius: 1.5rem; box-shadow: 0 4px 24px rgba(0,0,0,0.08); padding: 1.5rem 0; }
      .article-content { padding: 4rem; }
      .article-content .content { font-size: 1.15rem; line-height: 1.8; color: #4d6b3c; }
      .article-content .content p { margin-bottom: 2rem; }
      .article-content .content h2 { font-family: 'Cormorant Garamond', serif; font-size: 2rem; color: #6b4f2a; margin: 3rem 0 1.5rem; position: relative; }
      .article-content .content h2::before { content: ''; position: absolute; left: -2rem; top: 50%; transform: translateY(-50%); width: 0.25rem; height: 2rem; background: linear-gradient(135deg, #8bab5d, #6b4f2a); border-radius: 0.125rem; }
      .article-content .content p:first-of-type { font-size: 1.25rem; color: #6b4f2a; font-weight: 500; }
      .article-content .content p:first-of-type::first-letter { font-family: 'Cormorant Garamond', serif; font-size: 4rem; font-weight: 700; float: left; line-height: 1; margin: 0.1rem 0.5rem 0 0; color: #8bab5d; }
      .sharing-section { background: rgba(139,171,93,0.1); padding: 2rem; margin: 3rem -4rem -4rem; border-radius: 0 0 2rem 2rem; text-align: center; backdrop-filter: blur(10px); }
      .sharing-section h3 { font-family: 'Cormorant Garamond', serif; color: #6b4f2a; margin-bottom: 1rem; }
      .share-buttons { display: flex; justify-content: center; gap: 1rem; }
      .share-btn { display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.5rem; background: #8bab5d; color: white; text-decoration: none; border-radius: 2rem; font-weight: 500; transition: all 0.3s ease; }
      .share-btn:hover { background: #6b4f2a; transform: translateY(-2px); }
      @media (max-width: 768px) { .hero-section { padding: 6rem 1rem 4rem; } .article-content { padding: 2rem; } .sharing-section { margin: 2rem -2rem -2rem; } .nav-back { top: 1rem; left: 1rem; padding: 0.5rem 1rem; } .share-buttons { flex-direction: column; align-items: center; } }
    </style>
  </head>
  <body>
    <section class="hero-section">
      <div class="hero-image">
        <picture>
          <source srcset={ogImage || featuredImage} type="image/webp" />
          <img src={featuredImage} alt={featuredImageAlt} style="width:100%;height:100%;object-fit:cover;" />
        </picture>
      </div>
      <a href="/blog" class="nav-back">‚Üê Back to Blog</a>
      <div class="hero-content">
        <div class="article-meta">
          <span class="category-tag">{category}</span>
          <span>‚Ä¢</span>
          <span>{date}</span>
          <span>‚Ä¢</span>
          <span>{readTime}</span>
        </div>
        <h1>{title}</h1>
      </div>
    </section>
    <div class="container">
      <article class="article">
        <slot name="featuredImageSlot" />
        <div class="article-content">
          <div class="content">
            <slot />
          </div>
          <div class="sharing-section">
            <h3>Share this story</h3>
            <div class="share-buttons">
              <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent('Just read "' + title + '" - ' + description + ' üåø‚ú®')}&url=${encodeURIComponent(canonical)}`} target="_blank" rel="noopener noreferrer" class="share-btn">üê¶ Share on Twitter</a>
              <a href="https://discord.gg/enqAsyDU" target="_blank" rel="noopener noreferrer" class="share-btn">üí¨ Join Discord</a>
            </div>
          </div>
        </div>
      </article>
    </div>
  </body>
</html>
