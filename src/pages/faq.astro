---
import Analytics from '../components/Analytics.astro';
import SEO from '../components/SEO.astro';
import SearchComponent from '../components/SearchComponent.astro';
import { socialLinks } from '../config/social.ts';

const title = 'Frequently Asked Questions | Everdantia';
const description = 'Find answers to common questions about Everdantia, our NFT collection, conservation mission, and how digital trees support real forests.';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		
		<SEO 
			title={title}
			description={description}
			keywords="FAQ, Everdantia, NFT questions, forest conservation, blockchain, digital trees, mint date, community"
		/>
		
		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600;700&family=Inter:wght@400;500&display=swap" rel="stylesheet" />
		
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: 'Inter', sans-serif;
				background: linear-gradient(135deg, #f8f6f2 0%, #e8f4e8 100%);
				color: #4d6b3c;
				line-height: 1.6;
				min-height: 100vh;
			}

			/* Hero Section */
			.hero-section {
				background: linear-gradient(135deg, #2d4a2d 0%, #1a2e1a 100%);
				color: white;
				padding: 6rem 2rem 4rem;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.hero-section::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: url('/images/environment/forest-sanctuary/sanctuary1.jpg') center/cover;
				opacity: 0.1;
				z-index: 1;
			}

			.hero-content {
				position: relative;
				z-index: 2;
				max-width: 800px;
				margin: 0 auto;
			}

			.hero-section h1 {
				font-family: 'Cormorant Garamond', serif;
				font-size: clamp(2.5rem, 6vw, 4rem);
				font-weight: 700;
				margin-bottom: 1rem;
				text-shadow: 0 2px 20px rgba(0,0,0,0.3);
			}

			.hero-section p {
				font-size: 1.2rem;
				color: rgba(255,255,255,0.9);
				margin-bottom: 2rem;
				max-width: 600px;
				margin-left: auto;
				margin-right: auto;
			}

			/* Navigation */
			.nav-back {
				position: absolute;
				top: 2rem;
				left: 2rem;
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				color: white;
				text-decoration: none;
				font-weight: 500;
				transition: all 0.3s ease;
				z-index: 3;
				background: rgba(255,255,255,0.1);
				padding: 0.75rem 1.5rem;
				border-radius: 2rem;
				backdrop-filter: blur(10px);
			}

			.nav-back:hover {
				background: rgba(255,255,255,0.2);
				transform: translateX(-5px);
			}

			/* Main Content */
			.container {
				max-width: 1000px;
				margin: 0 auto;
				padding: 4rem 2rem;
			}

			/* FAQ Categories */
			.faq-nav {
				background: white;
				border-radius: 16px;
				padding: 1.5rem;
				margin-bottom: 3rem;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
				text-align: center;
			}

			.faq-nav h3 {
				font-family: 'Cormorant Garamond', serif;
				color: #2d4a2d;
				margin-bottom: 1rem;
				font-size: 1.3rem;
			}

			.category-links {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.category-link {
				padding: 0.5rem 1rem;
				background: #f0fff4;
				color: #38a169;
				text-decoration: none;
				border-radius: 20px;
				font-size: 0.9rem;
				font-weight: 500;
				transition: all 0.3s ease;
				border: 1px solid #c6f6d5;
			}

			.category-link:hover {
				background: #38a169;
				color: white;
				transform: translateY(-2px);
			}

			/* FAQ Sections */
			.faq-section {
				margin-bottom: 3rem;
			}

			.section-title {
				font-family: 'Cormorant Garamond', serif;
				font-size: 2rem;
				color: #2d4a2d;
				margin-bottom: 2rem;
				text-align: center;
				position: relative;
			}

			.section-title::after {
				content: '';
				display: block;
				width: 60px;
				height: 3px;
				background: #48bb78;
				margin: 0.5rem auto;
				border-radius: 2px;
			}

			/* FAQ Items */
			.faq-grid {
				display: grid;
				gap: 1.5rem;
			}

			.faq-item {
				background: white;
				border-radius: 12px;
				box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
				overflow: hidden;
				transition: all 0.3s ease;
				border: 1px solid #f1f5f9;
			}

			.faq-item:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
				border-color: #48bb78;
			}

			.faq-question {
				background: none;
				border: none;
				width: 100%;
				text-align: left;
				padding: 1.5rem;
				font-family: 'Cormorant Garamond', serif;
				font-size: 1.25rem;
				font-weight: 600;
				color: #2d4a2d;
				cursor: pointer;
				display: flex;
				justify-content: space-between;
				align-items: center;
				transition: all 0.3s ease;
			}

			.faq-question:hover {
				background: #f8f9fa;
				color: #48bb78;
			}

			.faq-question.active {
				background: #f0fff4;
				color: #38a169;
			}

			.faq-icon {
				font-size: 1.5rem;
				transition: transform 0.3s ease;
				color: #48bb78;
			}

			.faq-question.active .faq-icon {
				transform: rotate(180deg);
			}

			.faq-answer {
				padding: 0 1.5rem;
				max-height: 0;
				overflow: hidden;
				transition: all 0.3s ease;
			}

			.faq-answer.active {
				padding: 0 1.5rem 1.5rem;
				max-height: 500px;
			}

			.faq-answer p {
				color: #6b7280;
				line-height: 1.7;
				margin-bottom: 1rem;
			}

			.faq-answer p:last-child {
				margin-bottom: 0;
			}

			.faq-answer a {
				color: #48bb78;
				text-decoration: none;
				font-weight: 500;
			}

			.faq-answer a:hover {
				text-decoration: underline;
			}

			/* Special callout boxes */
			.faq-callout {
				background: linear-gradient(135deg, #f0fff4 0%, #e6fffa 100%);
				border: 1px solid #c6f6d5;
				border-radius: 12px;
				padding: 1.5rem;
				margin: 2rem 0;
			}

			.faq-callout h4 {
				font-family: 'Cormorant Garamond', serif;
				color: #2d4a2d;
				margin-bottom: 0.75rem;
				font-size: 1.2rem;
			}

			.faq-callout p {
				color: #4d6b3c;
				margin: 0;
			}

			/* Contact section */
			.contact-section {
				background: white;
				border-radius: 16px;
				padding: 3rem;
				text-align: center;
				box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
				margin-top: 4rem;
			}

			.contact-section h3 {
				font-family: 'Cormorant Garamond', serif;
				font-size: 2rem;
				color: #2d4a2d;
				margin-bottom: 1rem;
			}

			.contact-section p {
				color: #6b7280;
				margin-bottom: 2rem;
				font-size: 1.1rem;
			}

			.contact-links {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.contact-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.75rem 1.5rem;
				background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
				color: white;
				text-decoration: none;
				border-radius: 50px;
				font-weight: 500;
				transition: all 0.3s ease;
			}

			.contact-link:hover {
				transform: translateY(-2px);
				box-shadow: 0 8px 24px rgba(72, 187, 120, 0.3);
			}

			.contact-link.secondary {
				background: rgba(72, 187, 120, 0.1);
				color: #38a169;
				border: 1px solid rgba(72, 187, 120, 0.3);
			}

			.contact-link.secondary:hover {
				background: rgba(72, 187, 120, 0.2);
			}

			/* Responsive */
			@media (max-width: 768px) {
				.hero-section {
					padding: 4rem 1rem 3rem;
				}

				.hero-section h1 {
					font-size: 2.5rem;
				}

				.container {
					padding: 3rem 1rem;
				}

				.nav-back {
					top: 1rem;
					left: 1rem;
					padding: 0.5rem 1rem;
					font-size: 0.9rem;
				}

				.category-links {
					gap: 0.5rem;
				}

				.category-link {
					font-size: 0.8rem;
					padding: 0.4rem 0.8rem;
				}

				.faq-question {
					padding: 1.25rem;
					font-size: 1.1rem;
				}

				.faq-answer.active {
					padding: 0 1.25rem 1.25rem;
				}

				.contact-section {
					padding: 2rem 1.5rem;
				}

				.contact-links {
					flex-direction: column;
					align-items: center;
				}

				.contact-link {
					min-width: 200px;
					justify-content: center;
				}
			}
		</style>
	</head>

	<body>
